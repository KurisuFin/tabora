<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to event.name, event %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user %>
	<% if current_user.is_admin? %>
		<div id="controls"><%= link_to 'New Event', new_event_path %></div>
	<% end %>
<% end %>
