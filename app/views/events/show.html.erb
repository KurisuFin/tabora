<p id="notice"><%= notice %></p>

<h1><%= @event.name %></h1>

<table>
	<thead>
		<tr>
			<th>Tournament</th>
		</tr>
	</thead>
	<tbody>
		<% @event.tournaments.each do |tournament| %>
			<tr>
				<td><%= tournament.name %></td>
			</tr>
		<% end %>
	</tbody>
</table>


<% if current_user %>
	<% if current_user.is_operator_of @event %>
		<p><%= link_to 'Create new tournament', new_event_tournament_path(event_id: @event.id) %></p>
		<p><%= link_to 'Edit', edit_event_path(@event) %></p>
	<% end %>
<% end %>