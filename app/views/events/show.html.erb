<p id="notice"><%= notice %></p>

<h1><%= @event.name %></h1>

<table>
	<thead>
		<tr>
			<th>Tournament</th>
		</tr>
	</thead>
	<tbody>
		<% @event.tournaments.each do |tournament| %>
			<tr>
				<td><%= link_to tournament.name, tournament %></td>
			</tr>
		<% end %>
	</tbody>
</table>


<% if current_user %>
	<% if current_user.is_operator_of @event %>
		<div id="controls">
			<%= render 'controls' %>
		</div>
	<% end %>
<% end %>