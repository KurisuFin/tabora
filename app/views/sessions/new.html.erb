<h1>Login</h1>

<p id="notice"><%= notice %></p>

<%= form_tag sessions_path do %>
	<div class="field">
		<strong>Username</strong>
		<%= text_field_tag :username, params[:username] %>
	</div>
	<div class="field">
		<strong>Password</strong>
		<%= password_field_tag :password, params[:password] %>
	</div>
	<div class="action">
		<%= submit_tag 'Login' %>
	</div>
<% end %>