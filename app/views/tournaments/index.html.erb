<h1>Listing tournaments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Event</th>
      <th>Game</th>
    </tr>
  </thead>

  <tbody>
    <% @tournaments.each do |tournament| %>
      <tr>
        <td><%= link_to tournament.name, tournament %></td>
        <td><%= link_to tournament.event.name, tournament.event %></td>
        <td><%= link_to tournament.game.name, tournament.game %></td>
      </tr>
    <% end %>
  </tbody>
</table>